/* pages/idea/idea.wxss */
.idea_container{
  padding-top:30px;
  background:#fece24;
}
.idea_foot{
  position:fixed;
  bottom:0;
  display:flex;
  flex-direction: row;
  align-items: center;

  width:100%;
  height:60px;
  line-height:60px;
  color:#fff;
  font-size:20px;
  font-weight:600;
  background:#f5bf14;
}
.idea_title{
  width:100%;
  position:fixed;
  top:0;
  height:30px;
  line-height:30px;
  color:#fff;
  font-size:20px;
  font-weight:600;
  text-align:center;
  background:#f5bf14;
}
.idea_content{
  display:flex;
  flex-direction: column;
  align-items: center;
}
.idea_content image{
  width:50px;
  height:50px;
  padding:0 20px;
}
.idea_content text{
  display:block;
  height:50px;
  line-height:50px;
  color:#000;
  font-weight:bold;
}
.tip_content{
background:#9eea6a;
}
.idea_content_me{
  width:96%;
  display:flex;
  flex-direction: row;
  align-items: center;
  padding:5px 0;
  color:white;
  font-weight:bold;
}
.idea_content_other{
  width:96%;
  display:flex;
  flex-direction: row-reverse;
  align-items: center;
  padding:5px 0;
}
.idea_me_bg{
  display:flex;
  flex-direction: row;
  align-items: center;
}
.idea_me_bg image{
  width:50px;
}
.idea_other_bg{
  display:flex;
  flex-direction: row;
  align-items: center;
}
.tip_me_head{
  width:22px;
  height:50px;
  background-size:22px 50px;
  background-repeat:no-repeat;
  background-image:url("data:image/png;base64,");
}
.tip_me_foot{
  width:13px;
  height:50px;
  background-color:#9eea6a;
  border-radius:0 5px 5px 0;
}
.tip_other_head{
  width:22px;
  height:50px;
  background-size:22px 50px;
  background-repeat:no-repeat;
  background-image:url("data:image/png;base64,");
}
.tip_other_foot{
  width:13px;
  height:50px;
  background-color:#9eea6a;
  border-radius:5px 0 0 5px;
}
