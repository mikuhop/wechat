page{
  background:#fece24;
}
.idea_container{
  background:#fece24;
}
.idea_foot{
  position:fixed;
  bottom:0;
  display:flex;
  flex-direction: row;
  align-items: center;

  width:100%;
  height:60px;
  line-height:60px;
  color:#fff;
  font-size:20px;
  font-weight:600;
  background:#f5bf14;
  padding-left:10px;
}
.section{
  width:80%;
  height:40px;
  line-height:40px;
  background:#fff;
  border-radius:15px;
}
.section input{
  height:40px;
  line-height:40px;
  color:#000;
  font-size:14px;
  padding-left:10px;
  font-weight:400;
}
.idea_title{
  z-index:10;
  width:100%;
  position:fixed;
  top:0;
  height:30px;
  line-height:30px;
  color:#fff;
  font-size:20px;
  font-weight:600;
  text-align:center;
  background:#f5bf14;
}
.idea_content{
  display:flex;
  flex-direction: column;
  align-items: center;
  margin-top:50px;
}
.idea_content image{
  width:50px;
  height:50px;
  padding:0 10px;
}
.idea_content text{
  display:block;
  line-height:30px;
  font-size:15px;
  color:#000;
  font-weight:bold;
}
.tip_content{
  width:200px;
  background:#9eea6a;
  border-radius:10px;
  padding:0 10px;
}
.idea_content_me{
  width:96%;
  display:flex;
  flex-direction: row;
  padding:5px 0;
  color:white;
  font-weight:bold;
}
.idea_content_other{
  width:96%;
  display:flex;
  flex-direction: row-reverse;
  padding:5px 0;
}
.idea_me_bg{
  display:flex;
  flex-direction: row;
  align-items: center;
}
.idea_me_bg image{
  width:50px;
  height:50px;
}
.idea_other_bg{
  display:flex;
  flex-direction: row;
  align-items: center;
}
.tip_me_head{
  width:4px;
  height:50px;
  background-size:4px 10px;
  background-position-y:20px;
  background-repeat:no-repeat;
  background-image:url("data:image/png;base64,");
}
.tip_other_head{
  width:4px;
  height:50px;
  background-size:4px 10px;
  background-repeat:no-repeat;
  background-position-y:20px;
  background-image:url("data:image/png;base64,");
}
